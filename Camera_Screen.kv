#:import get_color_from_hex kivy.utils.get_color_from_hex
DEMO :
	name : 'Camera_Screen'
	MDBoxLayout :
		orientation : 'vertical'
		md_bg_color : get_color_from_hex('000000')
		MDBoxLayout :
			orientation : 'vertical'
			size_hint : 1,1
			md_bg_color : get_color_from_hex('000000')
			Image :
				id :Image_Camera
				size_hint : 1,1
				md_bg_color : get_color_from_hex('000000')
		MDBoxLayout :
			orientation : 'vertical'
			padding :[0,0,0,dp(5)]
			size_hint : 1,0.1
			MDIconButton:
			    icon: "camera"
			    user_font_size: "30sp"
			    theme_text_color: "Custom"
                text_color: 'white'
                pos_hint : {'center_x': 0.5, 'center_y': 0.5}
                on_release :
                    app.take_picture(*args)