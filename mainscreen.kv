#:import get_color_from_hex kivy.utils.get_color_from_hex
DEMO :
	name : 'mian_screen'
	id : main_Screen
	MDBoxLayout :
		orientation : 'vertical'
		MDNavigationLayout:
	        ScreenManager :
	            Screen :
	                MDBoxLayout :
	                    orientation :'vertical'
	                    spacing :dp(0)
	                    MDToolbar:
	                        title: "Main Page"
	                        elevation: 0
	                        anchor_title: 'center'
	                        radius :dp(10)
	                        md_bg_color: app.theme_cls.primary_dark
	                        specific_text_color: 'white'
	                        left_action_items:[['menu', lambda x: nav_drawer.set_state("open")]]
	                    MDBoxLayout :
		                    orientation :'vertical'
		                    size_hint: 1,0.1
		                    padding : dp(10)
		                    ScrollView:
		                        size_hint : 1,0.8
		                        do_scroll_x :False
		                        do_scroll_y: True
								MDList :
									id :bilal
									spacing : dp(10)
									MD_relativelayout :
										id: Card
										text : 'image_01'
										source : 'Image/VINO.png'
										name : 'image1'
									MD_relativelayout :
										id: Card2
										text : 'image_02'
										source : 'Image/VINO.png'
										name : 'image2'
									MD_relativelayout :
										id: Card3
										text : 'image_03'
										source : 'Image/VINO.png'
										name :'image3'
									MD_relativelayout :
										id: Card4
										text : 'image_04'
										source : 'Image/VINO.png'
										name :'image4'
									MD_relativelayout :
										id: Card5
										text : 'image_05'
										source : 'Image/VINO.png'
										name :'image5'
						MDBoxLayout :
		                    orientation :'vertical'
		                    size_hint: 1,0.01
							padding : [0,3,0,8]
		                    MDFillRoundFlatButton:
							    text: "Swipe To Execute"
							    theme_text_color: "Custom"
                                text_color: 'white'
							    md_bg_color: app.theme_cls.primary_dark
							    pos_hint :{'center_x' :0.5,'center_y': 0.5}
							    font_size :'16sp'
							    font_name : 'MPoppins'
							    name : 'Result_Screen'
							    on_release :
							        app.Conform_Image()
			MDNavigationDrawer :
                id : nav_drawer

                on_state :app.change_nav(self.state)
                MDBoxLayout :
                    orientation : 'vertical'
                    padding : (0)
                    MDBoxLayout :
	                    orientation  :'horizontal'
	                    size_hint_y: 0.3
	                    FitImage :
	                        source : 'image/root.jpg'
	                        size_hint : 1,1



	                MDBoxLayout :
	                    orientation  :'horizontal'
	                    size_hint_y: 1
						ScrollView:

					        DrawerList:
					            id: md_list
					            ItemDrawer:
					                id: icon01
					                icon :'content-save'
					                text :'Save File'
					                name : 'Save_screen'
					                on_release :
					                    app.Save_Image(*args)
					            ItemDrawer:
					                id: icon01
					                icon :'theme-light-dark'
					                text :'Dark-Mode'
					                on_release :
					                    app.change_mode()
					            ItemDrawer:
					                id: icon01
					                icon :'account-group'
					                text :'About-Us'
					                name : 'About_Screen'
					                on_release :
					                    app.change_screen(self.name)
					            ItemDrawer:
					                id: icon01
					                icon :'contacts'
					                text :'contact-Us'
					                name : 'share_screen'
					                on_release :
					                    app.change_screen(self.name)
					            ItemDrawer:
					                id: icon01
					                icon :'exit-to-app'
					                text :'Exit-To'
					                on_release :
					                    app.Exit()

<ItemDrawer>:
	text :''
	icon :''
	text : root.text
    theme_text_color: "Custom"
    text_color : app.theme_cls.primary_dark
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon01
        icon: root.icon
        theme_text_color: "Custom"
        text_color : app.theme_cls.primary_dark





<MD_relativelayout> :
	text :''
	source:''
	name : ''
	id: __self__.id
	size_hint_y : None
	height :'90dp'
	md_bg_color: app.theme_cls.primary_dark
	radius : dp(20)
	MDCard :
		orientation : 'vertical'
		md_bg_color: app.theme_cls.primary_dark
		radius : dp(20)
		MDBoxLayout :
			orientation : 'horizontal'
			padding: [10,10,10,10]
			spacing : dp(10)
			MDBoxLayout :
				orientation : 'horizontal'
				#padding: [5,5,5,5]

				MDCard:
					md_bg_color: app.theme_cls.primary_dark
					radius : [10,10,10,10]
					size_hint: 1,1
					elevation :0
					FitImage :
						source : root.source
						size_hint: 1,1
						radius : [10,10,10,10]
			MDBoxLayout :
				orientation : 'horizontal'
				padding: [10,0,0,0]
				size_hint_x : 1
				MDLabel :
					font_name : 'MPoppins'
				    font_size :'17sp'
					text :root.text
					size_hint_x: 1
					pos_hint_x:{'center_x':10}
					color : get_color_from_hex('#ffffff')

			MDBoxLayout :
				orientation : 'horizontal'
				padding: [10,0,10,20]
				spacing : dp(10)
				MDRoundFlatButton:
	                text: "Add +"
	                text_color: 1, 1, 1, 1
	                size_hint_x :None
	                line_color : get_color_from_hex("#F9C449")
	                text_color : get_color_from_hex("#F9C449")
	                on_release :
	                    app.change_Iamge(root.name)



<Content> :
	orientation : 'vertical'
	MDRoundFlatButton:
        text: "Add +"
        text_color: 1, 1, 1, 1
        size_hint_x :None
        line_color : get_color_from_hex("#F9C449")
        text_color : get_color_from_hex("#F9C449")
    MDRoundFlatButton:
        text: "Add +"
        text_color: 1, 1, 1, 1
        size_hint_x :None
        line_color : get_color_from_hex("#F9C449")
        text_color : get_color_from_hex("#F9C449")



<MDProBar>:
    id: progress
    pos_hint: {"center_y": .6}
    type: "indeterminate"


<MDSpinner>:
    size_hint: None, None
    size: dp(46), dp(46)
    pos_hint: {'center_x': .5, 'center_y': .5}